<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assign2.MainPage">

    <StackLayout>
        <Button Text="Vet Registration" IsVisible="{ Binding IsVetRegisterEnabled }" Clicked="VetRegister" />
        <Button Text="Vet List" IsVisible="{ Binding IsVetListEnabled }" Clicked="VetList"/>
        <Button Text="Pet Registration" IsVisible="{ Binding IsPetRegisterEnabled }" Clicked="PetRegister"/>
        <Button Text="Pet Display" IsVisible="{ Binding IsPetListEnabled }" Clicked="Button_Clicked"/>
        <Button Text="User Display" IsVisible="{Binding IsUserListEnabled}" Clicked="UserDisplay"/>
        <Button Text="Logout" Clicked="Logout" />
    </StackLayout>

</ContentPage>
