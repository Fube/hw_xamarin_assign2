<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assign2.VetRegister">
    <ContentPage.Content>
        <StackLayout Padding="20"
            VerticalOptions="Center">
            <Label Text="Welcome to Vet Register Page!"
            FontSize="Large"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
            
            <Entry Text="{Binding Vet.FirstName}"
            Placeholder="First Name"
            FontSize="Large"
            />

            <Entry Text="{Binding Vet.LastName}"
            Placeholder="Last Name"
            FontSize="Large"
            />

            <Entry Text="{Binding Vet.Email}"
            Placeholder="Email"
            FontSize="Large"
            />

            <Entry Text="{Binding Vet.PhoneNumber}"
            Placeholder="Phone"
            FontSize="Large"
            />


            <Entry Text="{Binding Vet.Specialization}"
            Placeholder="Specialization"
            FontSize="Large"
            />

            <Button Text="Register"
            Font="large"
            BackgroundColor="LightBlue"
            Clicked="Register"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>